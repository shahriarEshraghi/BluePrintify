{
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./dist",
      "strict": true,
      "target": "ES2022",
      "module": "commonjs",
      "sourceMap": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules","**/*.spec.ts"]
  }